<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= form_tag(root_path, method: "get") do %>
        <div class="form-group">
          <%= label_tag :q, "Input the phone number" %>
          <%= text_field_tag :q, "", class: "form-control" %>
        </div>
        <%= button_tag "Submit", class: "btn btn-primary mb-5" %>
      <% end %>

      <div class="card">
        <div class="card-header bg-info text-light">
          Result of combination for <%= params[:q]%>
        </div>
        <div class="card-body">
          <% @final_combination.each do |comb| %>
            <p><%= comb %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>